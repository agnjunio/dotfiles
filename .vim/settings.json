{
  "initializationOptions": {
    "cacheDirectory": "/tmp/cquery"
  },
  "pyls": {
    "enable": true,
    "configurationSources": [ "pycodestyle" ],
    "plugins": {
      "jedi_completion": {
        "enabled": true
      },
      "jedi_hover": {
        "enabled": true
      },
      "jedi_references": {
        "enabled": true
      },
      "jedi_signature_help": {
        "enabled": true
      },
      "jedi_symbols": {
         "enabled": true,
         "all_scopes": true
      },
      "pydocstyle": {
        "enabled": false
      },
      "pylint": {
        "enabled": false
      }
    }
  }
}
