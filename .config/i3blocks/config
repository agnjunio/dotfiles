[disk]
command=$HOME/.config/i3blocks/blocklets/disk
DIR=/
markup=pango
interval=30

[disk]
command=$HOME/.config/i3blocks/blocklets/disk
DIR=/srv
markup=pango
interval=30

[memory]
command=$HOME/.config/i3blocks/blocklets/memory
markup=pango
interval=30

[iface]
command=$HOME/.config/i3blocks/blocklets/iface
markup=pango
LABEL=
IFACE=eth0
interval=10
color=#00FF00

[iface]
command=$HOME/.config/i3blocks/blocklets/iface
